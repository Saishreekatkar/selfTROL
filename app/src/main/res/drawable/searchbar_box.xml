<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape -->
    <item>
        <shape>
            <solid android:color="#40000000" />
            <corners android:radius="11dp" />
        </shape>
    </item>

    <!-- Shadow Layer -->
    <item android:right="0.5dp" android:left="0.5dp" android:top="1dp" android:bottom="3dp">
        <shape>
            <solid android:color="#323232" />
            <corners android:radius="11dp" />
        </shape>
    </item>
</layer-list>
